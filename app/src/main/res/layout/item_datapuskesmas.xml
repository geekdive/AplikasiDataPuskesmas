<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtID_puskesmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id puskesmas" />

            <TextView
                android:id="@+id/txtNAMA_puskesmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama puskesmas" />

            <TextView
                android:id="@+id/txtLOKASI_puskesmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lokasi puskesmas" />

            <TextView
                android:id="@+id/txtEMAIL_puskesmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email puskesmas" />

            <TextView
                android:id="@+id/txtKODEKOTA_puskesmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kode kota puskesmas" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>